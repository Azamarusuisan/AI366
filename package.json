{
  "name": "meo-sync",
  "version": "1.0.0",
  "description": "Instagram to Google Business Profile synchronization tool",
  "main": "dist/main.js",
  "bin": {
    "meo-sync": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/main.ts",
    "start": "node dist/server.js",
    "server": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "instagram",
    "google-business-profile",
    "automation",
    "social-media",
    "cli"
  ],
  "author": "meo-sync",
  "license": "MIT"
}
